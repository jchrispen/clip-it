{
  "manifest_version": 2,
  "name": "Clip-it",
  "version": "1.1",
  "description": "An extension to clip all the coupons with one click",
  "homepage_url": "https://github.com/jchrispen/bjs-clip-it",
  "applications": {
    "gecko": {
      "id": "jason.chrispen@gmail.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "webRequest",
    "cookies",
    "activeTab",
    "storage",
    "notifications",
    "https://giantfood.com/*",
    "https://api.bjs.com/*",
    "https://www.bjs.com/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "js/sites/giantfood.js",
      "js/sites/bjs.js",
      "js/common.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://giantfood.com/*",
        "*://*.bjs.com/*"
      ],
      "js": [
        "js/sites/giantfood.js",
        "js/sites/bjs.js",
        "js/common.js",
        "js/content.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Clip it!",
    "default_icon": {
      "16": "icons/clip-it_dark.png",
      "48": "icons/clip-it_dark.png",
      "128": "icons/clip-it_dark.png"
    }
  }
}
