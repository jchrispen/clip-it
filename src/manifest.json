{
  "manifest_version": 3,
  "name": "BJs Clip-it",
  "version": "1.1",
  "description": "An extension to clip all the coupons with one click",
  "homepage_url": "https://github.com/jchrispen/bjs-clip-it",

  "browser_specific_settings": {
    "gecko": {
      "id": "{e4f681df-7721-4c60-b31a-73e6b489c791}"
    }
  },

  "host_permissions": [
    "https://api.bjs.com/*",
    "https://www.bjs.com/*",
    "<all_urls>"
  ],

  "permissions": [
    "webRequest",
    "cookies",
    "activeTab",
    "storage",
    "notifications"
  ],

  "background": {
    "scripts": [
      "js/background.js",
      "js/common.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["*://*.bjs.com/*"],
      "js": [
        "js/content.js",
        "js/common.js"
      ]
    }
  ],

  "action": {
    "default_title": "Clip it!",
    "default_icon": "icons/clip-it_dark.png",
    "theme_icons": [{
      "dark": "icons/clip-it_light.png",
      "light": "icons/clip-it_dark.png",
      "size": 32
    }]
  }
}
