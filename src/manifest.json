{
  "manifest_version": 2,
  "name": "BJs Clip-it",
  "version": "1.0",
  "description": "An extension to clip all the coupons with one click",
  "homepage_url": "https://github.com/jchrispen/bjs-clip-it",
  "icons": {
    "48": "icons/clip-it.png",
    "96": "icons/clip-it.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.bjs.com/myCoupons"],
      "run_at": "document_start",
      "js": ["js/background.js"]
    }
  ],

  "permissions": [
    "<all_urls>",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icons/clip-it.png",
    "default_title": "Clip it!"
  },

  "background": {
    "scripts": ["js/background.js"]
  }

}
